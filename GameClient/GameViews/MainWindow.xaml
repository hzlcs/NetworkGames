<Window
    x:Class="GameClient.GameViews.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:GameClient.GameViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:GameClient.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:MainVM}"
    mc:Ignorable="d">
    <hc:SimpleStackPanel>
        <Button Margin="0,0,0,10" Content="开始匹配" Command="{Binding StartMatchCommand}"/>
    </hc:SimpleStackPanel>
</Window>
